{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "media-converter",
  "title": "Media Converter",
  "description": "This extension converts video, image, and audio files using FFmpeg",
  "icon": "extension-icon.png",
  "author": "leandro.maia",
  "contributors": [
    "wattmalsh",
    "samuelkraft",
    "sacha_crispin"
  ],
  "categories": [
    "Productivity",
    "Design Tools",
    "Media"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "convert",
      "title": "Convert Media",
      "subtitle": "Media Converter",
      "description": "Converts a media file to a different file format",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "convert-media",
      "title": "Convert Media",
      "description": "Convert an image, video or audio file to a different file format",
      "input": {
        "type": "object",
        "properties": {
          "inputPath": {
            "type": "string"
          },
          "outputFileType": {
            "type": "string",
            "enum": [
              ".mp4",
              ".avi",
              ".mov",
              ".mkv",
              ".mpg",
              ".webm",
              ".mp3",
              ".aac",
              ".wav",
              ".flac",
              ".m4a",
              ".jpg",
              ".png",
              ".webp",
              ".heic",
              ".tiff",
              ".avif"
            ]
          },
          "quality": {
            "type": "string",
            "enum": [
              "lowest",
              "low",
              "medium",
              "high",
              "highest"
            ]
          },
          "imageQualityPercent": {
            "type": "number"
          },
          "webpLossless": {
            "type": "boolean"
          },
          "pngVariant": {
            "type": "string",
            "enum": [
              "png-24",
              "png-8"
            ]
          },
          "tiffCompression": {
            "type": "string",
            "enum": [
              "deflate",
              "lzw"
            ]
          },
          "audioBitrate": {
            "type": "string",
            "enum": [
              "64",
              "96",
              "128",
              "160",
              "192",
              "224",
              "256",
              "320"
            ]
          },
          "audioVbr": {
            "type": "boolean"
          },
          "audioProfile": {
            "type": "string",
            "enum": [
              "aac_low",
              "aac_he",
              "aac_he_v2"
            ]
          },
          "audioSampleRate": {
            "type": "string",
            "enum": [
              "22050",
              "44100",
              "48000",
              "96000"
            ]
          },
          "audioBitDepth": {
            "type": "string",
            "enum": [
              "16",
              "24",
              "32"
            ]
          },
          "flacCompressionLevel": {
            "type": "string",
            "enum": [
              "0",
              "1",
              "2",
              "3",
              "4",
              "5",
              "6",
              "7",
              "8"
            ]
          },
          "videoEncodingMode": {
            "type": "string",
            "enum": [
              "crf",
              "vbr",
              "vbr-2-pass"
            ]
          },
          "videoCrf": {
            "type": "number"
          },
          "videoBitrate": {
            "type": "string",
            "enum": [
              "50000",
              "40000",
              "30000",
              "25000",
              "20000",
              "15000",
              "10000",
              "8000",
              "5000",
              "4000",
              "3000",
              "2000",
              "1500",
              "1000",
              "750",
              "500"
            ]
          },
          "videoMaxBitrate": {
            "type": "string",
            "enum": [
              "",
              "50000",
              "40000",
              "30000",
              "25000",
              "20000",
              "15000",
              "10000",
              "8000",
              "5000",
              "4000",
              "3000",
              "2000",
              "1500",
              "1000",
              "750",
              "500"
            ]
          },
          "videoPreset": {
            "type": "string",
            "enum": [
              "medium",
              "veryslow",
              "slower",
              "slow",
              "fast",
              "faster",
              "veryfast",
              "superfast",
              "ultrafast"
            ]
          },
          "proresVariant": {
            "type": "string",
            "enum": [
              "4444xq",
              "4444",
              "hq",
              "standard",
              "lt",
              "proxy"
            ]
          },
          "vp9Quality": {
            "type": "string",
            "enum": [
              "best",
              "good",
              "realtime"
            ]
          }
        },
        "required": [
          "inputPath",
          "outputFileType"
        ]
      },
      "confirmation": true
    }
  ],
  "ai": {
    "description": "- Always use absolute paths for the input path. \n- Never guess the input path or use placeholder values. If you are unsure, ask the user for the input path. \n- After a successful conversion, return a link to the absolute path of the converted file.",
    "evals": [
      {
        "input": "@media-converter convert the last mp3 file in @finder downloads to wav",
        "mocks": {
          "convert-media": {}
        },
        "expected": [
          {
            "callsTool": "convert-media"
          }
        ]
      },
      {
        "input": "@media-converter convert all png files on my @finder desktop to webp",
        "mocks": {
          "convert-media": {}
        },
        "expected": [
          {
            "callsTool": "convert-media"
          }
        ]
      },
      {
        "input": "@media-converter convert my last screen recording in @finder downloads to webm",
        "mocks": {
          "convert-media": {}
        },
        "expected": [
          {
            "callsTool": "convert-media"
          }
        ]
      },
      {
        "input": "@media-converter convert the heic photos in @finder desktop to jpg",
        "mocks": {
          "convert-media": {}
        },
        "expected": [
          {
            "callsTool": "convert-media"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@raycast/api": "^1.100.2",
    "@raycast/utils": "^2.0.1",
    "axios": "^1.10.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@raycast/eslint-config": "^2.0.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.0.10",
    "eslint": "^9.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "ffmpeg_path",
      "type": "textfield",
      "placeholder": "path/to/ffmpeg/binary",
      "required": false,
      "title": "Custom FFmpeg Path (Advanced)",
      "description": "OPTIONAL - If left empty, the extension will look for a valid FFmpeg binary executable at common paths. If not found (expected for most users), you will be prompted to download a lightweight FFmpeg binary only available to this extension."
    },
    {
      "name": "moreConversionSettings",
      "type": "checkbox",
      "title": "More Conversion Settings (Advanced)",
      "label": "More granular control over the conversion",
      "default": false,
      "required": false,
      "description": "Will allow you to choose precise encoding mode, bitrate and more for videos, sample rate, bit depth and more for audios."
    }
  ]
}